<%- include('../partials/head', {errors, info}); %> <%-
include('../partials/navbar'); %>
<div class="container-fluid justify-content-center">
  <div class="w-50 container">
    <div class="mt-10 mb-10">
      <h1 style="text-align: center"><%= concertValues.title %></h1>
    </div>
    <div class="mb-3">
      <form action="<%= concertValues.action %>" method="POST">
        <div class="mb-3 ms-3 me-3">
          <label for="title" class="form-label">Tour Name:</label>
          <input
            name="title"
            id="title"
            type="text"
            class="form-control"
            value="<%= concertValues.title %>" />
        </div>
        <div class="mb-3 ms-3 me-3">
          <label for="artist" class="form-label">Artist</label>
          <input
            name="artist"
            id="artist"
            type="text"
            class="form-control"
            value="<%= concertValues.artist %>" />
        </div>
        <div class="mb-3 ms-3 me-3">
          <label for="review" class="form-label">Review</label>
          <textarea
            cols="2"
            rows="10"
            name="review"
            id="review"
            type="text"
            class="form-control">
<%= concertValues.review %></textarea
          >
        </div>
        <div class="mb-3 ms-3 me-3">
          <label for="review" class="form-label">Rate</label>

          <select
            name="rate"
            id="rate"
            class="form-select"
            value="<%= concertValues.rate %>">
            <% rateValues.forEach((rateName)=>{ %>
            <option value="<%= rateName %>"><%= rateName %></option>
            <% }) %>
          </select>
        </div>
        <div
          class="d-flex justify-content-between align-items-center ms-3 me-3">
          <a href="/concerts" class="btn btn-dark">Back</a>
          <button type="submit" class="btn btn-success">
            <%= concertValues.submit %>
          </button>
        </div>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      </form>
    </div>
  </div>
  <%- include("../partials/footer") %>
</div>
