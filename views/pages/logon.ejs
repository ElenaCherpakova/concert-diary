<%- include("../partials/head", {errors, info}) %>
<div
  class="container-fluid d-flex justify-content-center align-items-center mb-5">
  <div class="w-100 container">
    <div class="mt-10 mb-10"></div>
    <div class="col-md-6 offset-md-3 align-items-center">
      <form class="px-4 py-3" action="/logon" method="POST">
        <div class="form-group mb-3">
          <label for="username" class="form-label">Email</label>
          <input name="username" id="username" type="text" class="form-control" />

          <label for="password" class="form-label">Password</label>
          <input name="password" id="password" type="password" class="form-control" />
        </div>
        <a href="/" class="btn btn-outline-dark">Back</a>
        <button type="submit" class="btn btn-dark">Logon</button>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      </form>
    </div>
  </div>
</div>
